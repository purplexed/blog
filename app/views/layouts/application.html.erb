<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% if notice %>
		<%= notice %>
	<% end %>

	<% if alert %>
		<%= alert	%>
	<% end %>

	<% if user_signed_in? %>

	<p>Feeling like writing something today? <%= current_user.name %> - <%= link_to "Sign_out", destroy_user_session_path, :method => 'delete' %></p>
	<% end %>

<%= yield %>

</body>
</html>
